<UserControl x:Class="ModelView.Views.ToolBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModelView.Views"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="600">
    <Control.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#F6F6F6"/>
        </Style>
    </Control.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="75"/>
            <ColumnDefinition MinWidth="75"/>
            <ColumnDefinition MinWidth="75"/>
            <ColumnDefinition MinWidth="75"/>
            
            
        </Grid.ColumnDefinitions>
        <Button Content="Accueil"  Grid.Column="0" Command="{Binding MainCommand}"></Button>
        <Button Content="Jeu"  Grid.Column="1" Command="{Binding JeuxCommand}"></Button>
        <Button Content="Editeur"  Grid.Column="2" Command="{Binding EditeurCommand}"></Button>
        <Button Content="Profil" Height="40" Grid.Column="3" ></Button>
        

    </Grid>


</UserControl>
